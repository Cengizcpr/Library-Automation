    <div class="container">
                                     
            <div class="card row">
                <div class="card-header"><h3>Receive Book</h3></div>
                <div class="card-body" style="padding:5%">
                        <form id = "bookreceive" action="/receivebook" method="post">    
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                   
                                    <input required class="form-control" type="text" name="student_number" placeholder="Student Number"  ><br>
                                    <input required class="form-control" type="text" name="isbn" placeholder="ISBN" style="margin-left:530px; margin-top:-62px"><br>
                                </div>
                            </div>
                            <input type="submit" class="btn btn-danger receive" value="Save" name="Save" style="width:120px; margin-left:45%; margin-top:25px; ">
                        </form>
                      
                        
                    
                 </div >
                 </div>
    <script>
                 $( ".receive" ).click(function(event) {
              
                    event.preventDefault();
                  
          
                   $.post( "/receivebook", $( "#bookreceive" ).serialize(), function( data ) {
          
                                   
                                    $( "#bookreceive")[0].reset();
                                
                       
                            if (data.error) {
                                    $(".receive").notify(data.message, "error");
                                   
                            } 
                            else {
                                  
                               $(".receive").notify(data.message,"success");
                           
                            } 
                        
                        
                        
                    });
                    
                });
       
         
            
            
            </script>
    
    
    
    


